      margin: 10px;
    }

    @keyframes typing {
      from {
        width: 0;
      }
      to {
        width: 30em;
      }
    }

    @keyframes moveUpDown {
      0% {
        top: 50%;
        transform: translate(-50%, -50%) rotate(-35deg);
      }
      50% {
        top: 60%;
        transform: translate(-50%, -50%) rotate(-40deg);
      }
      100% {
        top: 50%;
        transform: translate(-50%, -50%) rotate(-35deg);
      }
    }

    @keyframes bounce {
      0%,
      20%,
      50%,
      80%,
      100% {
        top: 90%;
      }
      40% {
        top: 85%;
      }
      60% {
        top: 88%;
      }
    }
