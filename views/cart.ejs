<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Product Details</title>
<style>
/* CSS styles */
.product-box {
    display: flex;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-bottom: 20px;
}

.product-image {
    width: 150px;
    height: 150px;
    border-radius: 5px 0 0 5px;
}

.product-info {
    padding: 20px;
}

.product-name {
    font-size: 20px;
    margin-bottom: 10px;
}

.product-description {
    margin-bottom: 15px;
}

.product-price {
    font-weight: bold;
    margin-bottom: 15px;
}

.buttons button {
    padding: 10px 20px;
    font-size: 14px;
    margin-right: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.add-to-cart-btn {
    background-color: #4CAF50;
    color: white;
}

.add-to-wishlist-btn {
    background-color: #008CBA;
    color: white;
}

.buy-now-btn {
    background-color: #f44336;
    color: white;
}
a{
    text-decoration: none;
    color: black;
}
.container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin-right: 5vw;
    }
    h1 {
        text-align: center;
    }
    h2 {
        text-align: center;
        font-size: 1.3vw;
    }
    .price {
        text-align: center;
        font-size: 24px;
        color: #4CAF50;
    }
    .pricee {
        text-align: center;
        font-size: 30px;
        font-weight: 800;
        color: #f54d1af5;
    }
    .quantity-input {
        margin-top: 10px;
        display: flex;
        justify-content: center;
    }
</style>
</head>
<body>
    <% let totalPrice = 0; %>
    <% user.cart.forEach(carts => { %>
        <% let proTotalPrice = carts.c_price * carts.c_quant; %>
        <% totalPrice += proTotalPrice; %>
        <a href="/wpage/<%=carts.c_id%>">
            <div class="product-box">
                <img src="/images/uploads/<%=carts.c_image %>" alt="Product Image" class="product-image">
                <div class="product-info">
                    <h2 class="product-name"><%=carts.c_name %></h2>
                    <p class="product-description"><%=carts.c_description %></p>
                    <p class="product-price">$<%=carts.c_price %></p>
                </a>
                    <div class="quantity-input">
                        <input type="number" id="quantity_<%= carts.c_id %>" name="quantity" value="<%= carts.c_quant %>" min="1" max="10" onchange="updateTotalPrice('<%= carts.c_id %>', <%= carts.c_price %>)">
                    </div>
                </div>
                <div class="container">
                    <h2>Total Product Price</h2>
                    <div id="totalPrice_<%= carts.c_id %>" class="price">$<%= proTotalPrice %></div>
                </div>
            </div>
     
    <% }); %>
    <div class="container">
        <h1>Total Price</h1>
        <div class="pricee">$<%= totalPrice %></div>
    </div>
    <script>
        
        function updateTotalPrice(productId, productPrice) {
            const quantityInput = document.getElementById('quantity_' + productId);
            const totalPriceElement = document.getElementById('totalPrice_' + productId);
            const quantity = parseInt(quantityInput.value);
            const totalProductPrice = productPrice * quantity;
            totalPriceElement.innerText = '$' + totalProductPrice.toFixed(2);
        }
    </script>
</body>
</html>
